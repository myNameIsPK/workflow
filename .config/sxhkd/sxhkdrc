#
# wm independent hotkeys
#

# terminal emulator
super + Return
	$TERMINAL

# program launcher
# super + @space
	# dmenu_run

super + space ; {space, b, e}
  {dmenu_run, $BROWSER, $TERMINAL -e $EDITOR}

# Volume settings
super + v
  pid=$(xdotool search --class Volume); \
  [ -z $pid ] && $TERMINAL --class Volume -e pulsemixer || xdotool windowkill $pid

# Monitoring
ctrl + shift + Escape
  pid=$(xdotool search --class Monitoring); \
  [ -z $pid ] && $TERMINAL --class Monitoring -e btop || xdotool windowkill $pid

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#!/bin/sh

alias a=alias

[ -f "$XINITRC" ] && alias startx="startx $XINITRC"

# Shortcut: Reload config file
[ -e ${XDG_CONFIG_HOME:-$HOME/.config}/shell/shortcutrc ] && source ${XDG_CONFIG_HOME:-$HOME/.config}/shell/shortcutrc
alias \
	rebash="source $HOME/.config/bash/bashrc" \
	rezsh="source $HOME/.config/zsh/.zshrc" \
	cfq=edit-qmk \

# Tmux
alias \
	ta="tmux a" \
	tls="tmux ls" \
	tks="tmux kill-sess" \
	tkp="tmux kill-pane" \
	td="tmux detach-client" \

# Git shortcut
alias \
	g="git" \
	gs="git status" \
	gss="git status --short" \
	ga="git add" \
	gaa="git add --all --verbose" \
	gc="git commit" \
	gca="git commit --amend" \
	gu="git rm --cached"  \
  gd="git restore"  \
  grs="git reset"  \
	gst="git stash"  \
	gb="git branch" \
	gba="git branch --all" \
	gbd="git branch --delete" \
	gbD="git branch -D" \
	gco="git checkout" \
	gwt="git worktree" \
	grb="git rebase" \
	grbi="git rebase -i" \
	grba="git rebase --abort" \
	grbc="git rebase --continue" \
	gm="git merge" \
	gmt="git mergetool" \
	gp="git pull" \
	gP="git push" \
	gPf="git push --force-with-lease" \
	gsr="git remote set-url origin" \
	ggraph="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative" \

# LazyGit
alias \
	gz="lazygit" \
	dz="lazygit --git-dir=/home/pk/.dotfile.git --work-tree=/home/pk" \

# Packages
# FIXME: cannot display correctly
alias \
	pmsize="LC_ALL=C pacman -Qi | awk '/^Name/{name=$3} /^Installed Size/{print $4$5, name}' | sort -h" \

# FZF integration
alias \
	vio="fzf-openfiles" \

# Colorize output
alias \
	ls="ls --color=auto" \
	grep="grep --color=auto" \
	egrep="egrep --color=auto" \
	fgrep="fgrep --color=auto" \

# Confirm file operation
alias \
	cp="cp -i" \
	mv="mv -i" \
	rm="rm -i" \

# Utilities
alias \
	vi="nvim" \
	lv="lvim" \
	dot="git --git-dir=$DOTFILES --work-tree=$HOME" \
	colortest="msgcat --color=test" \

# ls Flags
alias \
	l="ls -CF" \
	ll="ls -lAFrt" \
	la="ls -lAF --group-directories-first" \
	lh="ls -lAFhS" \

# Check disk space
alias \
	df="df -h" \
	free="free -m" \
	duh="du -h --max-depth=1 | sort -h -r" \

# Hack
alias \
	cd-="cd -" \
	....="cd ../.." \
	......="cd ../../.." \
	........="cd ../../../.." \
	:q=exit \

#!/bin/sh

directory="~"
if [ $# -eq 1 ]; then
  ses_name=$1
else 
  directory=$(find ~/.local/src -maxdepth 1 -type d | fzf)
  ses_name=$(basename "$directory")
fi

[ -z "$ses_name" ] && exit 1

if ! tmux has-session -t "$ses_name"; then
  tmux new-session -ds "$ses_name" -c "$directory"
fi

[ "$TMUX" ] \
  && tmux switch-client -t "$ses_name" \
  || tmux attach -t "$ses_name"
